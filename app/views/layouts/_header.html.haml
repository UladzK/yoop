.navbar.navbar-fixed-top
  .navbar-inner
    #logo          
      %h3
        = link_to 'Yoop', artists_path
    .search
      = form_tag artists_path, :method => :get do              
        = text_field_tag :search, params[:search], "id" => "search_size"        
        = submit_tag 'Search', :name => nil, "id" => "search_btn_size"        
    .login
      - if signed_in? then 
        = "Welcome"
        = link_to 'Sign Out', destroy_user_session_path, :method => :delete
      - else
        = link_to 'Sign In/Sign Up', new_user_session_path
