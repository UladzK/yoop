.login
  = link_to 'Login', login_path
- title "Welcome to yoop, dear friend"
%table
  %tr
    %th Artist:
  - for track in @tracks
    %tr
      %td= link_to track.title, track
      - if current_user then
        %td= link_to 'Edit', edit_track_path(track)
        %td= link_to 'Delete', track, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Track", new_track_path
