= form_for(@track) do |f|
  = f.error_messages
  %p
    = f.label( "title" )
    %br
    = f.text_field( :title )
  %p
    = f.label( :lyrics )
    %br
    = f.text_area( :lyrics )
  .field
    - Artist.all.each do |artist|
      = check_box_tag "track[artist_ids][]", artist.id
      = artist.name
      %br
  %p
    = f.submit()
